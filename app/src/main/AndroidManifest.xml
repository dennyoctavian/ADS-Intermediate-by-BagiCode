<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieADSIntermediate"
        tools:targetApi="31">
        <activity
            android:name=".modules.wishlist.WishlistActivity"
            android:exported="false" />
        <activity
            android:name=".modules.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".modules.splash.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.all_movies.AllMovieActivity"
            android:exported="false"
            android:theme="@style/Theme.MovieADSIntermediate" />
        <activity
            android:name=".modules.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".modules.home.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>